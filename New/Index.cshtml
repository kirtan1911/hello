@{
    Layout = "~/Views/Shared/MasterPage.cshtml";
    var informationData = ViewData["Data"] as IEnumerable<Information>;
}

@model Information

<link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />

<div class="container my-5">
    <div class="row g-4">

        <!-- ================= USER HEADER ================= -->
        <div class="row align-items-center bg-light p-3 rounded shadow-sm mb-4">

            <div class="col-md-1 text-center">
                <img src="~/picture/@ViewBag.image" class="rounded-circle border user-header-img">
            </div>

            <div class="col-md-2">
                <small class="text-muted">Name</small>
                <h5 class="fw-bold">@ViewBag.name</h5>
            </div>

            <div class="col-md-3">
                <small class="text-muted">Email</small>
                <h6>@ViewBag.email</h6>
            </div>

            <div class="col-md-2">
                <small class="text-muted">Contact</small>
                <h6>@ViewBag.contact</h6>
            </div>

            <div class="col-md-2">
                <small class="text-muted">Type</small>
                <h6>@ViewBag.type</h6>
            </div>

            <div class="col-md-2">
                <small class="text-muted">Password</small>
                <h6>@ViewBag.password</h6>
            </div>

        </div>

        @if (ViewBag.type == "Admin" || ViewBag.type == "User")
        {
            <div class="mb-3">
                <button class="btn btn-success" data-bs-toggle="modal" data-bs-target="#AddEmployee">Add Employee</button>
            </div>
        }
        @foreach (var data in informationData)
        {
            if (ViewBag.type == "Admin")
            {
                <div class="col-lg-3 col-md-6">
                    <div class="card p-2 shadow border-success">

                        <div class="card-actions text-end">
                            <i class="bi bi-pencil-square edit-btn" data-bs-toggle="modal" data-bs-target="#editModal"
                                data-id="@data.id" data-name="@data.name" data-email="@data.email"
                                data-password="@data.password" data-contact="@data.contact" data-type="@data.type"></i>

                            <i class="bi bi-trash delete-btn text-danger" data-bs-toggle="modal" data-bs-target="#deleteModal"
                                data-id="@data.id"></i>
                        </div>

                        <img src="~/picture/@data.image" class="card-img-top">

                        <div class="card-body text-center">
                            <h5>@data.name</h5>
                            <span class="badge bg-success">@data.type</span>
                            <hr />
                            <p><b>Email:</b> @data.email</p>
                            <p><b>Password:</b> @data.password</p>
                            <p><b>Contact:</b> @data.contact</p>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="col-lg-3 col-md-6">
                    <div class="card p-2 shadow border-success">

                        <img src="~/picture/@data.image" class="card-img-top">

                        <div class="card-body text-center">
                            <h5>@data.name</h5>
                            <span class="badge bg-info">@data.type</span>
                            <hr />
                            <p><b>Email:</b> @data.email</p>
                            <p><b>Password:</b> @data.password</p>
                            <p><b>Contact:</b> @data.contact</p>
                        </div>
                    </div>
                </div>
            }
        }
        @if (ViewBag.type == "Admin" || ViewBag.type == "User")
        {
            <div class="col-lg-9">
                <div class="card shadow">
                    <div class="card-header bg-dark text-white text-center">
                        <i class="bi bi-table"></i> Employee Details
                    </div>

                    <div class="table-responsive">
                        <table class="table table-bordered table-hover text-center">
                            <thead class="table-secondary">
                                <tr>
                                    <th>Id</th>
                                    <th>Image</th>
                                    <th>Name</th>
                                    <th>Email</th>
                                    <th>Contact</th>
                                    <th>Password</th>
                                    <th>Type</th>
                                    <th>Created By</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var data in informationData)
                                {
                                    var d = informationData.Where(t => t.id == data.CreateBy).FirstOrDefault();
                                    <tr>
                                        <td>@data.id</td>
                                        <td>
                                            <img src="~/picture/@data.image" class="table-img">
                                        </td>
                                        <td>@data.name</td>
                                        <td>@data.email</td>
                                        <td>@data.contact</td>
                                        <td>@data.password</td>
                                        <td>@data.type</td>
                                        @if (d != null)
                                        {
                                            <td>@d.name</td>
                                        }
                                        else
                                        {
                                            <td>-</td>
                                        }
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@* ================= EDIT MODAL ================= *@
<div class="modal fade" id="editModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <form method="post" enctype="multipart/form-data" asp-action="Edit">

                <div class="modal-header">
                    <h5 class="modal-title">Edit Information</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body">
                    <input type="hidden" id="editId" name="id" />

                    <div class="mb-3">
                        <label class="form-label">Name</label>
                        <input type="text" id="editName" name="name" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Email</label>
                        <input type="email" id="editEmail" name="email" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Password</label>
                        <input type="text" id="editPassword" name="password" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Contact</label>
                        <input type="text" id="editContact" name="contact" class="form-control" />
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Type</label>
                        <select id="editType" name="type" class="form-select">
                            <option>Admin</option>
                            <option>User</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label class="form-label">Image</label>
                        <input type="file" id="editImage" name="image" class="form-control" />
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                        Close
                    </button>
                    <button type="submit" class="btn btn-primary">
                        Update
                    </button>
                </div>

            </form>

        </div>
    </div>
</div>


@* ================= DELETE MODAL ================= *@
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <form method="post" asp-action="Delete">
            <input type="hidden" name="id" id="deleteId" />
            <div class="modal-content">

                <div class="modal-header">
                    <h5 class="modal-title text-danger text-center">Confirm Delete</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>

                <div class="modal-body text-center">
                    <p class="fs-5">Are you sure you want to delete this user?</p>
                </div>

                <div class="modal-footer justify-content-center">
                    <button class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <button type="submit" class="btn btn-danger">Delete</button>
                </div>

            </div>
        </form>
    </div>
</div>

@* Add Modal *@

<div class="modal fade" id="AddEmployee" tabindex="-1" aria-labelledby="AddEmployeeLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-centered">
        <div class="modal-content shadow-lg">

            <!-- Modal Header -->
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="AddEmployeeLabel">
                    <i class="bi bi-person-plus"></i> Add Employee
